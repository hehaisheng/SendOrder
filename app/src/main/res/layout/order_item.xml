<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单时间:2017.9.11 12:12"
                android:padding="5dp"
                android:textColor="@color/itemBackground"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/order_detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_time_text"
                android:text="华辉肠....猪肉半斤"
                android:padding="5dp"
                android:textColor="@color/itemBackground"
                android:textSize="13sp"
                />


            <TextView
                android:id="@+id/order_address_text"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/order_detail_text"
                android:padding="5dp"
                android:text="地址:"
                android:textColor="@color/text_common"
                android:textSize="13sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/order_address_detail_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/order_address_text"
                android:layout_toRightOf="@+id/order_address_text"
                android:text="海珠晓港北路5号904"
                android:padding="5dp"
                android:textColor="@color/text_common"
                android:textSize="13sp"
                android:gravity="center_vertical"/>


            <TextView
                android:id="@+id/order_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/order_address_detail_text"
                android:padding="5dp"
                android:text="电话:"
                android:textColor="@color/text_common"
                android:textSize="13sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/order_phone_detail_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/order_phone_text"
                android:layout_toRightOf="@+id/order_phone_text"
                android:text="15634218432"
                android:padding="5dp"
                android:textColor="@color/colorTheme"
                android:textSize="15sp"
                android:gravity="center_vertical"/>


            <Button
                android:id="@+id/order_send_button"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:text="已接单"
                android:layout_below="@+id/order_phone_detail_text"
                app:layout_marginLeftPercent="25%w"
                android:layout_marginBottom="10dp"
                android:background="@drawable/backcircle"
                android:textColor="@color/text_common"
                android:textSize="10sp"
                android:gravity="center"
                />


            <Button
                android:id="@+id/order_send_success_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="完成"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/order_phone_detail_text"
                app:layout_marginRightPercent="25%w"
                android:background="@drawable/redcircle"
                android:textColor="@color/text_common"
                android:textSize="12sp"
                android:gravity="center"
                />



        </com.zhy.android.percent.support.PercentRelativeLayout>





    </android.support.v7.widget.CardView>




</com.zhy.android.percent.support.PercentRelativeLayout>
